<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">¡¡Escribe lo que quieras!!</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>granPa.com</h1>

  <p>
    Bienvenido a granPa.com. Esta es la página principal.
  </p>

  <%= link_to "Resgístrate!", signup_path, :class => "signup_button round" %>
<% end %>
